  "version": "0.2.0",
  "configurations": [
    {
      "type": "mix_task",
      "request": "launch",
      "name": "mix test",
      "task": "test",
      "taskArgs": ["--trace"],
      "projectDir": "${workspaceRoot}",
      "requireFiles": ["test/**/test_helper.exs", "test/**/*_test.exs"],
      "startApps": true
    },
    {
      "name": "Launch erlang",
      "type": "erlang",
      "request": "launch",
      "cwd": "${workspaceRoot}"
    }
  ]
}
