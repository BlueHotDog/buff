  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'buff'",
      "cargo": {
        "args": [
          "run",
          "--",
          "login",
          "--email",
          "test@test.com",
          "--password",
          "password"
        ],
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'buff'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=buff",
          "--package=buffcli"
        ],
        "filter": {
          "name": "buff",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'bufflib'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=bufflib"
        ],
        "filter": {
          "name": "bufflib",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}